<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">
    <Frame name="Gambit_CharacterSheetNameplateTemplate" inherits="TRP3_AltHoveredFrame"
        virtual="true"
    >
        <Frames>
            <Frame parentKey="NameplateTextContainer" inherits="TRP3_TruncatedTextTemplate">
                <Size x="170" y="30" />
                <Anchors>
                    <Anchor point="TOPLEFT" x="20" y="-15" relativePoint="TOPLEFT"
                        relativeKey="$parent" />
                    <Anchor point="RIGHT" x="-20" y="0" relativePoint="TOPRIGHT"
                        relativeKey="$parent" />
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <Texture parentKey="Banner" file="Interface\QuestionFrame\TitleBanner"
                            alpha="0.85">
                            <Size x="256" y="64" />
                            <Anchors>
                                <Anchor point="CENTER" x="1" y="-20" />
                            </Anchors>
                        </Texture>
                        <FontString parentKey="Text" inherits="SystemFont_Med1"
                            justifyH="CENTER"
                            text="$Name Here$">
                            <Size x="150" y="0" />
                            <Anchors>
                                <Anchor point="CENTER" relativeKey="$parent.Banner" x="0" y="18" />
                            </Anchors>
                            <Color r="0.2824" g="0.0157" b="0.0157" />
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
            <Frame parentKey="ClassTextContainer" inherits="TRP3_TruncatedTextTemplate">
                <Size x="120" y="35" />
                <Anchors>
                    <Anchor point="BOTTOM" x="0" y="15" relativePoint="BOTTOM"
                        relativeKey="$parent" />
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString parentKey="ClassText" inherits="GameFontNormal"
                            justifyH="CENTER"
                            justifyV="TOP"
                            text="$Class Here$">
                            <Color b="0.1" r="1.0" g="0.75" />
                        </FontString>
                        <FontString parentKey="ClassDescText" inherits="GameFontNormal"
                            justifyH="LEFT"
                            text="$Class Label$">
                            <Color b="0.1" r="1.0" g="0.75" />
                            <Anchors>
                                <Anchor point="TOP" x="0" y="0" relativePoint="BOTTOM"
                                    relativeKey="$parent.ClassText" />
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
            <Frame parentKey="RaceTextContainer" inherits="TRP3_TruncatedTextTemplate">
                <Size x="120" y="35" />
                <Anchors>
                    <Anchor point="RIGHT" x="0" y="0" relativePoint="LEFT"
                        relativeKey="$parent.ClassTextContainer" />
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString parentKey="RaceText" inherits="GameFontNormal"
                            justifyH="CENTER"
                            justifyV="TOP"
                            text="$Race Here$">
                            <Color b="0.1" r="1.0" g="0.75" />
                        </FontString>
                        <FontString parentKey="RaceDescText" inherits="GameFontNormal"
                            justifyH="LEFT"
                            text="$Race Label$">
                            <Color b="0.1" r="1.0" g="0.75" />
                            <Anchors>
                                <Anchor point="TOP" x="0" y="0" relativePoint="BOTTOM"
                                    relativeKey="$parent.RaceText" />
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
            <Frame parentKey="AlignmentTextContainer" inherits="TRP3_TruncatedTextTemplate">
                <Size x="120" y="35" />
                <Anchors>
                    <Anchor point="LEFT" x="0" y="0" relativePoint="RIGHT"
                        relativeKey="$parent.ClassTextContainer" />
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString parentKey="AlignmentText" inherits="GameFontNormal"
                            justifyH="CENTER"
                            justifyV="TOP"
                            text="$Alignment Here$">
                            <Color b="0.1" r="1.0" g="0.75" />
                        </FontString>
                        <FontString parentKey="AlignmentDescText" inherits="GameFontNormal"
                            justifyH="LEFT"
                            text="$Alignment Label$">
                            <Color b="0.1" r="1.0" g="0.75" />
                            <Anchors>
                                <Anchor point="TOP" x="0" y="0" relativePoint="BOTTOM"
                                    relativeKey="$parent.AlignmentText" />
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
        </Frames>
    </Frame>
</Ui>